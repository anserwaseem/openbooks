@{
    Layout = null;
}

@using openbooks.Models;
@model string
<head>
    <link rel="shortcut icon" href="~/imgs/logo.png" type="image/x-icon">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @*<link rel="stylesheet" href="~/Extra/bootstrap.min.css">*@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/js/bootstrap.min.js">
    @*<link rel="stylesheet" href="~/Extra/style.css">*@
    <link rel="stylesheet" href="~/css/style.css">
    @*<script src="~/Extra/jquery.min.js"></script>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @*<script src="~/Extra/bootstrap.min.js"></script>*@
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <meta charset="UTF-8">
    <title>Login</title>
</head>
<body>
    <nav class="navbar navbar-light" style="box-shadow: 3px 3px 15px 4px cornflowerblue;">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="~/home/register">OpenBooks</a>
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="register">
            <form method="post" action="../Home/AddNewUser">
                <h2>
                    Register
                </h2>
                <br />
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" id="name" name="fullname" placeholder="Full Name">
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Enter email">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" id="pass" placeholder="Password">
                </div>
                <div class="form-group">
                    <label>Confirm Password</label>
                    <input type="password" class="form-control" id="cpass" name="password" placeholder="Confirm Password">
                </div>
                <button type="submit" class="btn btn-primary">Register</button> &nbsp; &nbsp; &nbsp; <label>@Model</label>
                <br />
                <br />
                <small>Already a member? <a href="~/home/login">login now</a></small>
            </form>
        </div>
    </div>
</body>
<footer class="panel-footer">
    <div class="row">
        <div class="col-sm-12">
            <h3>Links</h3>
            <ul>
                <li>
