
@{
    ViewBag.Title = "Getbook";
    Layout = "~/Views/Shared/_main.cshtml";
}
@using openbooks.Models
@model Tuple<Book, List<string>, int>
<body>
 @section links{
        <ul class="nav navbar-nav navbar-right">
        <li><a href="~/home/login"><span class="glyphicon glyphicon-user"></span> Your Account</a></li>
            <li><a href="~/home/cart"><span class="glyphicon glyphicon-shopping-cart"></span> Cart</a></li>
        </ul>
    }
        <br />


        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-2">


                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#catg">
                            <span class="icon-bar" style="background-color:black"></span>
                            <span class="icon-bar" style="background-color:black"></span>
                            <span class="icon-bar" style="background-color:black"></span>
                        </button>
                        <label class="navbar-brand">Categories</label>
                    </div>
                    <div class="collapse navbar-collapse" id="catg">
                        <ul class="nav navbar-nav">
                            @foreach (string c in Model.Item2)
                            {
                                <li>

                                    <div class="row" style="margin:auto;">
                                        <div class="col-sm-12">
                                            <form method="post" action="../home/Category" id="ct">
                                                <p hidden name="categoryType" value="@c"></p>
                                                <input type="hidden" value="@c" name="categoryType" />
                                                <h3>
                                                    <button class="btn btn-default" type="submit" onclick="document.getElementById('ct').submit()">@c</button><br />
                                                </h3>
                                            </form>
                                        </div>
                                    </div>

                                </li>

                            }
                        </ul>

                    </div>

                </div>

                <div class="col-sm-10">
                    <div class="row">

                        <div class="bookpage">
                                <div class="row">
                                    <div class="col-sm-4">
                                        <img src="~/imgs/dum1.png" class="responsive" style="width:200px;height:200px" />
                                    </div>
                                    <div class="col-sm-8">
                                        <div class="row">
                                            <h3>Title: </h3>@Model.Item1.title
                                        </div>
                                        <div class="row">
                                            <h3>Author: </h3>@Model.Item1.author
                                        </div>
                                        <div class="row">
                                            <h3>ISBN: </h3>@Model.Item1.isbn
                                        </div>
                                        <div class="row">
                                            <h3>Language: </h3>@Model.Item1.language
                                        </div>
                                        <div class="row">
                                            <h3>Description: </h3>@Model.Item1.description
                                        </div>
                                        <div class="row">
                                            <h3>Publishing Date: </h3>@Model.Item1.publishingDate
                                        </div>
                                        <div class="row">
                                            <h3>Price: </h3>@Model.Item1.price
                                        </div>
                                        <div class="row">
                                            <h3>Discount: </h3>@Model.Item1.discount
                                        </div>
                                        <div class="row">
                                            <h3>Category: </h3>@Model.Item1.category
                                        </div>
                                        <br />
                                        <div class="row">
                                            <h3>Average Rating: </h3>@Model.Item3
                                        </div>
                                        <br />
                                        @*<form method="post" action="../home/AddToCart" id="atc">
                                            <div class="row">
                                                <p hidden name="bookid" value="@Model.Item1.bookID"></p>
                                                <input type="hidden" id="hf" value="@Model.Item1.bookID" name="bookid" />
                                            </div>
                                            <div class="row">
                                                <button type="submit" class="btn btn-primary" onclick="document.getElementById('atc').submit()">Add to Cart</button>
                                            </div>
                                        </form>*@
                                    </div>
                                </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
        <br />
</body>

