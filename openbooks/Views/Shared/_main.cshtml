@using openbooks.Models;
<!DOCTYPE html>

<html>
<head>
    <link rel="shortcut icon" href="~/imgs/logo.png" type="image/x-icon">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/js/bootstrap.min.js">*@
    @*<link rel="stylesheet" href="~/Extra/style.css">*@
    <link rel="stylesheet" href="~/css/style.css">


    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>


    @*<script src="~/Extra/jquery.min.js"></script>*@
    @*<script src="~/lib/jquery/dist/jquery.min.js"></script>*@
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" rel="stylesheet">
    @*<script src="~/Extra/bootstrap.min.js"></script>*@
    @*<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>*@
    <meta charset="UTF-8">
    <title>@ViewBag.Title</title>
</head>
<body>
    <nav class="navbar navbar-light" style="box-shadow: 3px 3px 15px 4px cornflowerblue;">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar" style="background-color:black"></span>
                    <span class="icon-bar" style="background-color:black"></span>
                    <span class="icon-bar" style="background-color:black"></span>
                </button>
                <a class="navbar-brand" href="~/home/index">OpenBooks</a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="~/home/index">Home</a></li>
                    <li><a href="~/home/Wishlist">Wishlist</a></li>
                    <li><a href="~/home/request">Request</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <form method="post" action="../home/logout">
                            <button style="margin-top:8px;" type="submit" class="btn btn-link">Logout  <span class="glyphicon glyphicon-log-out"></span></button>
                        </form>
                    </li>
                </ul>
                @RenderSection("links", required: false);

            </div>
        </div>
    </nav>
    <div>
        @RenderBody()
    </div>
    <footer class="panel-footer">
        <div class="row">
            <div class="col-sm-12">
                <h3>Links</h3>
                <ul>
                    <li>
                        <a href="#">Contact</a>
                    </li>
                    <li>
                        <a href="#">About</a>
                    </li>
                    <li>
                        <a href="#">Facebook</a>
                    </li>
                </ul>
            </div>
            <div class="col-sm-12">
                <div class="well text-center">
                    <p>2020 Copyright <a href="#">openbooks.com</a></p>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>
